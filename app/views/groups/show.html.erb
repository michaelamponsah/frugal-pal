<section>
<% content_for :page_title, "TRANSACTIONS" %>

 <div class="d-flex justify-content-between bg-white px-4 py-2 fixed-top" style="margin-top: 5rem;">
  <span class="text-muted"><%= @group_name %></span>
  <span class="fw-bold">Total: $<%= @formatted_total_expense %></span>
 </div>
<div class="container" style="margin-top: 10rem; margin-bottom: 10rem;">
  <div class="d-flex justify-content-end mt-4 mb-2">
    <%= link_to "Go back", groups_path, class: "btn btn-sm btn-secondary text-white" %>
  </div>
   <ul class="list-group">
    <%  @category_expenses.each do |expense| %>
      <li class="d-flex border border-light-subtle align-items-start bg-white shadow-sm mt-2 list-group-item">
        <div class="col-8 d-flex justify-content-start align-items-center gap-2">
            <div class="d-flex flex-column w-75">
              <p><%= expense.name %></p>
              <p class="mt-2"><%= expense.created_at.strftime('%b %d, %Y') %></p>
            </div>
        </div>
        <div class="text-end col-4 ms-2">
          <p class="fw-semibold">$<%= sprintf('%.2f', expense.amount) %></p>
        </div>
      <% end %>
    </li>
  </ul>
</div>
 <div class="fixed-bottom d-flex justify-content-center align-items-center bg-green p-4">
  <%= link_to "ADD A NEW EXPENSE", new_group_expense_path(@group), class: "btn text-white border border-light" %>
 </div>
</section>